{
  "manifest_version": 3,
  "name": "FAP Dashboard",
  "version": "4.5.0",
  "description": "Xem GPA, điểm danh, lịch học, lịch thi, thống kê, tính toán GPA, export calendar và nhiều tính năng nâng cao",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage", "notifications", "alarms"],
  "host_permissions": [
    "https://fap.fpt.edu.vn/*",
    "https://api.github.com/*",
    "https://github.com/*",
    "https://lms-hcm.fpt.edu.vn/*",
    "https://it-hcm.fpt.edu.vn/*",
    "https://wttr.in/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "report.html",
        "report.js",
        "report.css",
        "timer-icons.css",
        "icon128.png",
        "chart.min.js",
        "auto-calendar.js"
      ],
      "matches": [
        "https://fap.fpt.edu.vn/*",
        "https://lms-hcm.fpt.edu.vn/*",
        "https://it-hcm.fpt.edu.vn/*"
      ]
    }
  ]
}
