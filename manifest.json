{
  "manifest_version": 3,
  "name": "FAP Dashboard",
  "version": "4.3.0",
  "description": "Xem GPA, điểm danh, lịch học, lịch thi, thống kê, tính toán GPA và nhiều tính năng nâng cao",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": ["https://fap.fpt.edu.vn/*", "<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "report.html",
        "report.js",
        "report.css",
        "focus-page.html",
        "focus-page.js",
        "timer-icons.css",
        "icon128.png",
        "chart.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
