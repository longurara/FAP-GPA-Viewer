{
  "manifest_version": 3,
  "name": "FAP GPA Viewer – Dashboard",
  "version": "2.9.0",
  "description": "Xem GPA, điểm danh, lịch học và xuất PDF ngay trong popup",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "notifications", "alarms"],
  "host_permissions": ["https://fap.fpt.edu.vn/*"],
  "web_accessible_resources": [
    {
      "resources": ["report.html", "report.js", "report.css", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
