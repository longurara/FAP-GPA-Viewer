{
  "manifest_version": 3,
  "name": "FAP Dashboard",
  "version": "5.0.0",
  "description": "Xem GPA, điểm danh, lịch học, lịch thi, thống kê, tính toán GPA, export calendar và nhiều tính năng nâng cao",
  "icons": {
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "https://fap.fpt.edu.vn/*",
    "https://api.github.com/*",
    "https://github.com/*",
    "https://lms-hcm.fpt.edu.vn/*",
    "https://it-hcm.fpt.edu.vn/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pages/report.html",
        "scripts/report.js",
        "styles/report.css",
        "styles/timer-icons.css",
        "assets/icons/icon128.png",
        "scripts/vendor/chart.min.js",
        "scripts/auto-calendar.js"
      ],
      "matches": [
        "https://fap.fpt.edu.vn/*",
        "https://lms-hcm.fpt.edu.vn/*",
        "https://it-hcm.fpt.edu.vn/*"
      ]
    }
  ]
}